{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "launch server",
      "runtimeExecutable": "node",
      "runtimeArgs": ["-r", "ts-node/register", "server/index.ts"],
      "env": {
        "TS_NODE_PROJECT": "tsconfig.server.json"
      },
      "port": 9229
    },
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "launch server (Docker)",
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}",
      "trace": true
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "trace": true
    },
    {
      "type": "edge",
      "request": "launch",
      "name": "Launch Edge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
